<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================== -->
    <!-- LIST VIEW -->
    <!-- ===================== -->
    <record id="view_pakan_crm_list" model="ir.ui.view">
        <field name="name">pakan.crm.list</field>
        <field name="model">pakan.crm</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- ===================== -->
    <!-- FORM VIEW -->
    <!-- ===================== -->
    <record id="view_pakan_crm_form" model="ir.ui.view">
        <field name="name">pakan.crm.form</field>
        <field name="model">pakan.crm</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="status"/>
                    </group>

                    <group>
                        <field name="catatan"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== -->
    <!-- ACTION -->
    <!-- ===================== -->
    <record id="action_pakan_crm" model="ir.actions.act_window">
        <field name="name">CRM Pelanggan</field>
        <field name="res_model">pakan.crm</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ===================== -->
    <!-- MENU -->
    <!-- ===================== -->
    <menuitem id="menu_pakan_crm"
              name="CRM Pelanggan"
              parent="menu_pakan_root"
              action="action_pakan_crm"
              sequence="40"/>

</odoo>
