<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_pakan_burung_list" model="ir.ui.view">
        <field name="name">pakan.burung.list</field>
        <field name="model">pakan.burung</field>
        <field name="arch" type="xml">
            <list string="Data Pakan Burung">
                <field name="name"/>
                <field name="jenis"/>
                <field name="harga"/>
                <field name="stok"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_pakan_burung_form" model="ir.ui.view">
        <field name="name">pakan.burung.form</field>
        <field name="model">pakan.burung</field>
        <field name="arch" type="xml">
            <form string="Pakan Burung">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="jenis"/>
                    </group>
                    <group>
                        <field name="harga"/>
                        <field name="stok"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_pakan_burung" model="ir.actions.act_window">
        <field name="name">Pakan Burung</field>
        <field name="res_model">pakan.burung</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU ROOT -->
    <menuitem id="menu_pakan_root" name="Manajemen Penjualan Pakan"/>

    <!-- SUB MENU -->
    <menuitem
        id="menu_pakan_burung"
        name="Pakan Burung"
        parent="menu_pakan_root"
        action="action_pakan_burung"/>

</odoo>
