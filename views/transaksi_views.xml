<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================== -->
    <!-- LIST VIEW -->
    <!-- ===================== -->
    <record id="view_pakan_transaksi_list" model="ir.ui.view">
        <field name="name">pakan.transaksi.list</field>
        <field name="model">pakan.transaksi</field>
        <field name="arch" type="xml">
            <list>
                <field name="kode_transaksi"/>
                <field name="tanggal"/>
                <field name="customer_id"/>
                <field name="pakan_id"/>
                <field name="qty"/>
                <field name="total"/>
            </list>
        </field>
    </record>

    <!-- ===================== -->
    <!-- FORM VIEW -->
    <!-- ===================== -->
    <record id="view_pakan_transaksi_form" model="ir.ui.view">
        <field name="name">pakan.transaksi.form</field>
        <field name="model">pakan.transaksi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm"
                            string="Konfirmasi"
                            type="object"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <group>
                        <field name="kode_transaksi" readonly="1"/>
                        <field name="tanggal"/>
                    </group>

                    <group>
                        <field name="customer_id"/>
                        <field name="pakan_id"/>
                    </group>

                    <group>
                        <field name="qty"/>
                        <field name="harga_satuan" readonly="1"/>
                        <field name="total" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== -->
    <!-- ACTION -->
    <!-- ===================== -->
    <record id="action_pakan_transaksi" model="ir.actions.act_window">
        <field name="name">Transaksi Penjualan</field>
        <field name="res_model">pakan.transaksi</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ===================== -->
    <!-- MENU -->
    <!-- ===================== -->
    <menuitem id="menu_pakan_transaksi"
              name="Transaksi Penjualan"
              parent="menu_pakan_root"
              action="action_pakan_transaksi"
              sequence="30"/>

</odoo>
